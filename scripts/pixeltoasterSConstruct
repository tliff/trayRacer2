env = Environment()
ptlib = SharedLibrary('pixeltoaster',['PixelToaster.cpp'],LIBS=['X11', 'rt'], CXXFLAGS='-O3')
env.Install('/usr/lib', ptlib)
env.Install('/usr/include/pixeltoaster', 'PixelToasterApple.h')
env.Install('/usr/include/pixeltoaster', 'PixelToasterCommon.h')
env.Install('/usr/include/pixeltoaster', 'PixelToasterConversion.h')
env.Install('/usr/include/pixeltoaster', 'PixelToaster.h')
env.Install('/usr/include/pixeltoaster', 'PixelToasterUnix.h')
env.Install('/usr/include/pixeltoaster', 'PixelToasterWindows.h')

env.Alias('install', '/usr/include/pixeltoaster')
env.Alias('install', '/usr/lib')